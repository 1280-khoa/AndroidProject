<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:elevation="8dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/itempt_image"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_weight="3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itempt_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tên Xe"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itempt_loai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text=" Loại Xe: Giường Nằm"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itempt_diadiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text=" Sài Gòn => Long Xuyên"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itempt_Gio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="  Giờ: 10:00 - 12:00"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itempt_Ngay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="  Ngày: 01/01/2012"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itempt_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text=" Giá: 250000đ"
                android:textColor="@android:color/holo_red_light"
                android:textSize="16dp" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>