<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="30dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/itemxe_image"
                android:layout_gravity="fill"
                android:src="@drawable/ic_media_24"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <TextView
                android:id="@+id/itemdia_diem"
                android:text="Sài Gòn => Long Xuyên"
                android:textSize="19sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/itemGio_ten"
                android:text="10:00 - 12:00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/itemxe_gia"
                android:text="Giá: 2500000đ"
                android:textSize="15sp"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </FrameLayout>

</androidx.cardview.widget.CardView>